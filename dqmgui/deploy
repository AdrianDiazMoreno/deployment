# vim: set ft=sh sw=2 ts=8 et :
deploy_dqmgui_deps()
{
  deploy backend
  deploy admin
}

deploy_dqmgui_prep()
{
  mkproj gui repository
}

deploy_dqmgui_sw()
{
  export CVSROOT=:pserver:anonymous@cmscvs.cern.ch:/cvs/CMSSW
  deploy_pkg comp cms+dqmgui 5.3.2

  cd $project_config
  cvs -Q co -d config -r OFFLINE_CONFIG_PRODUCTION CMSSW/DQM/Integration/config
  cvs -Q co -d style -r OFFLINE_CONFIG_PRODUCTION CMSSW/DQM/RenderPlugins/src
  setgroup -R ug+r,go-w _config config style
}

deploy_dqmgui_post()
{
  case $host in vocms10[67] | vocms5[03] ) disable ;; * ) enable ;; esac
  (mkcrontab; sysboot; echo "17 2 * * * $project_config/daily") | crontab -
}
