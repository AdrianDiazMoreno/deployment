# Ignore current month release files
-rs /srv-dev/HG1304[a-z]
-rs /srv-*/[a-z][a-z]HG1304[a-z]

# Ignore previous month latest release files
-rs /srv-dev/HG1303[f-z]
-rs /srv-preprod/[a-z][a-z]HG1303[f-z]
-rs /srv-prod/[a-z][a-z]HG1303[f-z]

# Do not exclude the receiver's proxy files from current and previous releases
-r /srv-dev/HG130[34][a-z]/auth/proxy/proxy*.cert
-r /srv-*/[a-z][a-z]HG130[34][a-z]/auth/proxy/proxy*.cert

# Do not try to copy files from any other old releases
-s /srv-dev/HG121[12][a-z]
-s /srv-*/[a-z][a-z]HG121[12][a-z]
-s /srv-dev/HG130[23][a-z]
-s /srv-*/[a-z][a-z]HG130[23][a-z]
