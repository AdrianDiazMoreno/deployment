# vim: set ft=sh sw=2 ts=8 et :
deploy_phedex_datasvc_deps()
{
  deploy backend
}

deploy_phedex_datasvc_prep()
{
  mkproj cache/phedex-datasvc
}

deploy_phedex_datasvc_sw()
{
  deploy_pkg comp cms+PHEDEX-datasvc DATASVC_1_6_6
}

deploy_phedex_datasvc_post()
{
  case $host in vocms53 ) disable ;; * ) enable ;; esac
  cmd="$root/current/apps/PHEDEX-datasvc/bin/trim-cache 1000M"
  $nogroups || cmd="sudo -H -u _phedex bashs -c '$cmd'"
  (mkcrontab | { fgrep -v "$root/current/apps/PHEDEX-datasvc/" || true; }
   sysboot; echo "0 * * * * $cmd") | crontab -
}
