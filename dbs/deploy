# vim: set ft=sh sw=2 ts=8 et :
deploy_dbs_deps()
{
  deploy backend
  deploy wmcore-auth
}

deploy_dbs_prep()
{
  mkproj
}

deploy_dbs_sw()
{
  deploy_pkg comp cms+dbs3 DBS_3_S6_0_pre2-cmp
}

deploy_dbs_post()
{
  case $host in vocms53 ) disable ;; * ) enable ;; esac
  (mkcrontab | sysboot) | crontab -
}
